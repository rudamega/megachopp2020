<div class="container">
  <div class="row">
    <div class="col-6 col-md-4">Estado:</div>
      <% if @transaction.status == "conciliado"%>
        <div class="col-6 col-md-4"><h6 class="btn btn-success text-center"><%=@transaction.status%></h6></div>
      <% else %>
        <div class="col-6 col-md-4"><h6 class="btn btn-danger text-center"><%=@transaction.status%></h6></div>
      <% end %>
  </div>
  <div class="row">
    <div class="col-6 col-md-4">Monto débito:</div>
      <% if @transaction.status == "conciliado"%>
        <div class="col-6 col-md-4"><h6 class="btn btn-success text-center"><%=@transaction.importe_debito%></h6></div>
      <% else %>
        <div class="col-6 col-md-4"><h6 class="btn btn-danger text-center"><%=@transaction.importe_debito%></h6></div>
      <% end %>
  </div>
<div class="row">
  <div class="col-6 col-md-4">Monto crédito:</div>
    <% if @transaction.status == "conciliado"%>
      <div class="col-6 col-md-4"><h6 class="btn btn-success text-center"><%=@transaction.importe_credito%></h6></div>
    <% else%>
      <div class="col-6 col-md-4"><h6 class="btn btn-danger text-center"><%=@transaction.importe_credito%></h6></div>
    <% end %>
</div>
<div class="row">
  <div class="col-6 col-md-4">Comprobante</div>
    <div class="col-6 col-md-4"><h6 class="text-left"><%=@transaction.comprobante%></h6></div>
</div>
<div class="row">
  <div class="col-6 col-md-4">Obs:</div>
    <div class="col-6 col-md-4"><h6 class="text-left"><%=@transaction.comment%></h6></div>
</div>

  <% if @transaction.photos.attached? %>
    <% @transaction.photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
  <% end %>
<h2 class="btn btn-success"><%= link_to 'Editar', edit_transaction_path(@transaction)%></h2>
<h2 class="btn btn-success"><%= link_to "Conciliar", conciliado_path(@transaction)%></h2>
<h2 class="btn btn-success"><%= link_to "Atras", :back %></h2>
</div>
<div class="accordion" id="accordionExample">
    <div class="card">
      <div class="card-header" id="headingTwo">
        <h2 class="mb-0">
          <button class="btn btn-link btn-block text-center" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
            Historico
          </button>
        </h2>
      </div>
      <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
        <div class="card-body">
          <%= @transaction.updated_at%>
        </div>
      </div>
    </div>
</div>



