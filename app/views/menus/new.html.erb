<div class="container">
  <div class="row justify-content-center">
    <div class="col-12">
      <%= simple_form_for(@menu) do |f| %>
        <%= f.input :name, label: "Nombre"%>
        <%= f.input :description, label: "Description"%>
        <%= f.input :price, label: "Precio"%>
        <%= f.input :tipo, label: "Tipo", collection: ["Entrada", "Plato Principal", "Postre", "Bebida sin alcohol", "Bebida con alcohol", "Vinos"]%>
        <div class="d-flex justify-content-center">
        <%= f.submit "Crear habitacion"%>
        </div>
      <% end %>
      <%= link_to 'Back', root_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>
</div>
