<form action="/pagos" class="form-inline d-flex justify-content-center md-form form-sm mt-15 m-3 rounded-pill">
  <input class="form-control form-control-sm ml-3 w-75" type="text" name="query" placeholder="Search"
    aria-label="Search">
  <button class="btn" type="submit"><i class="glyphicon glyphicon-search"></i></button>
</form>

<div class="col-xs-12 col-sm-12 col-md-12">
  <div style="overflow-x:auto;">
    <div class="text-center">
      <%= link_to "Cargar Pago", new_pago_path, class: "btn btn-success text-center"%>
    </div>
  </div>
  <div class="tab-pane fade show" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg">
        <div style="overflow-x:auto;">
          <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Proveedor</th>
              <th scope="col">Banco</th>
              <th scope="col">Orden de Pago</th>
              <th scope="col">Recibo</th>
            </tr>
          </thead>
          <tbody>
            <% @pagos.each do |pago| %>
              <tr>
                <td> <%=pago.id%> </td>
                <td> <%=pago.proveedor%></td>
                <td> <%=pago.banco%> </td>
                <td> <%= link_to pago.op, "https://demo.walk-in.app/pagos/printOrdenPagoAlter/#{pago.op.to_i + 29}"%></td>
                <% if pago.recibo == "No" %>
                  <td>
                    <%= link_to "#", data: {confirm: "Deseas confirmar esta operacion??"} do  %>
                    <h6 class="btn btn-danger text-center">Cargar</h6>
                    <% end %>
                  </td>
                <% else %>
                  <td><%= pago.recibo%></td>
                <% end %>
              </tr>
              </div>

            <% end %>
          </tbody>
          </table>
        </div>
      </div>
    </div>
</div>
